<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/editext"
    android:padding="5dp">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/are_image_select_internet_image_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/editext"
        android:hint="@string/are_image_insert_hint"
        android:inputType="textNoSuggestions"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/are_image_select_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/are_image_select_internet_image_url"
        android:layout_marginBottom="@dimen/editext"
        android:text="@string/insert"
        android:textColor="?attr/colorPrimary"
        android:textSize="@dimen/text_size_18_sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/are_image_select_internet_image_url" />
</androidx.constraintlayout.widget.ConstraintLayout>