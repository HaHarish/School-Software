<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_cloud"
    android:padding="16dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_lessonPlan_academicYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        android:textColorHint="@android:color/holo_blue_dark"
        app:boxBackgroundColor="@android:color/white"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_baseline_arrow_drop_down_24"
        app:endIconContentDescription="@string/lesson_plan">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_lessonPlan_academicYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:cursorVisible="false"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:hint="Academic Year"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_lessonPlan_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_lessonPlan_academicYear"
        android:layout_marginTop="16dp"
        app:boxBackgroundColor="@android:color/white"
        android:textColorHint="@android:color/holo_blue_dark"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_baseline_arrow_drop_down_24"
        app:endIconContentDescription="@string/lesson_plan">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_lessonPlan_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Volume"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_lessonPlan_branch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_lessonPlan_volume"
        android:layout_marginTop="16dp"
        app:boxBackgroundColor="@android:color/white"
        android:textColorHint="@android:color/holo_blue_dark"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_baseline_arrow_drop_down_24"
        app:endIconContentDescription="@string/lesson_plan">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_lessonPlan_branch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Branch"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_lessonPlan_grade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_lessonPlan_branch"
        android:layout_marginTop="16dp"
        app:boxBackgroundColor="@android:color/white"
        android:textColorHint="@android:color/holo_blue_dark"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_baseline_arrow_drop_down_24"
        app:endIconContentDescription="@string/lesson_plan">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_lessonPlan_grade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Grade"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_lessonPlan_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_lessonPlan_grade"
        android:layout_marginTop="16dp"
        app:boxBackgroundColor="@android:color/white"
        android:textColorHint="@android:color/holo_blue_dark"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_baseline_arrow_drop_down_24"
        app:endIconContentDescription="@string/lesson_plan">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_lessonPlan_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Subject"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_lessonPlan_chapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_lessonPlan_subject"
        android:layout_marginTop="16dp"
        app:boxBackgroundColor="@android:color/white"
        android:textColorHint="@android:color/holo_blue_dark"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_baseline_arrow_drop_down_24"
        app:endIconContentDescription="@string/lesson_plan">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_lessonPlan_chapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Chapter"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"/>
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>