<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/purple_700</item>
        <item name="colorControlNormal">@color/purple_700</item>
        <item name="colorControlHighlight">@color/purple_700</item>
        <item name="colorControlActivated">@color/purple_700</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#3A3A3A</item>
    </style>

    <style name="TabLayoutAppearance" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabIndicatorColor">@color/app_color</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabRippleColor">@color/app_color</item>
        <item name="tabSelectedTextColor">@color/teal_700</item>
        <item name="tabMode">fixed</item>
        <item name="android:elevation">4dp</item>
    </style>


    <!--    bottomsheet item ripple colour-->
    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/app_color</item>
    </style>

    <!--    bottomsheet item linear layout style-->
    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!--    bottomsheet heading style-->
    <style name="BottomSheetHeadStyle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>

        <item name="android:paddingBottom">8dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--    bottomsheet with icon item style-->
    <style name="BottomSheetWithIconTextItemStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>

        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="drawableTint">@color/app_color</item>
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="BottomSheetAdapterItemTextStyle">
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="StyleTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/app_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/enter_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/exit_to_bottom</item>
    </style>

    <style name="Common.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/teal_700</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="errorEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextColor">@color/teal_700</item>
    </style>

    <style name="Common.FilterButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#fff</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:text">@string/filter</item>
        <item name="elevation">5dp</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="Common.CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginStart">@dimen/dimen_size_16_dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_size_8_dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_size_16_dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_size_8_dp</item>
        <item name="contentPadding">@dimen/dimen_8dp</item>

        <item name="cardBackgroundColor">#FFFFFF</item>
        <item name="cardElevation">@dimen/dimen_size_4_dp</item>
    </style>

    <style name="Common.PositiveButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#18EF99</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Common.NegativeButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#DC637F</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Common.NormalButton" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Common.OutlinedMaterialButton" parent="Widget.MaterialComponents.Button.OutlinedButton">

        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="textAllCaps">false</item>

    </style>

    <style name="Common.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="textAllCaps">false</item>

    </style>

    <style name="Common.ProgressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/colorPrimaryDark</item>
    </style>

    <style name="Common.DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:buttonBarNegativeButtonStyle">
            @style/DatePickerTheme.ButtonBarNegativeButtonStyle
        </item>
        <item name="android:buttonBarPositiveButtonStyle">
            @style/DatePickerTheme.ButtonBarNegativeButtonStyle
        </item>
    </style>

    <style name="DatePickerTheme.ButtonBarNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="DatePickerTheme.ButtonBarPositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!--    Size decreasing order-->
    <!--    -->
    <!--    Head -->
    <!--    SubHead-->
    <!--    Content-->
    <!--    -->

    <style name="TextStyleHeadMediumBold">
        <item name="android:textColor">#5721B6</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/dimen_size_2_dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/text_size_18_sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleContentMediumBold">
        <item name="android:textColor">#158F84</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/dimen_size_2_dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/text_size_14_sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleContentMedium">
        <item name="android:textColor">#515151</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/dimen_size_2_dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/text_size_14_sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>